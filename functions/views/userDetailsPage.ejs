<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/main.css" />
    <title>Student Details</title>
  </head>
  <style>
    main {
      display: flex;
      justify-content: space-around;
      padding: 0 2rem 2rem 0;
    }
    .enrolled-courses {
      margin-bottom: 1rem;
    }
  </style>

  <body>
    <header>
      <%- include('./partials/_header', {isAuth: isAuth, rights: rights}) %>
    </header>

    <main>
      <div class="wrapper-div">
        <section class="student-profile">
          <div class="student-name">
            <h1><%= studentName %></h1>
          </div>
        </section>

        <section class="enrolled-courses">
          <h1>Enrolled Projects</h1>
          <hr />
          <% if(projects.length <= 0) { %>
          <p style="color: grey">No enrolled projects</p>
          <% } else { %>
          <ul class="courses-list">
            <% for(let project of projects) { %>
            <li><%= project.title %></li>
            <% } %>
          </ul>
          <% } %>
        </section>

        <section class="assigned-tasks">
          <h1>Assigned Tasks</h1>
          <hr />
          <% if(tasks.length <= 0) { %>
          <p style="color: grey">No tasks assigned for this student</p>
          <% } else {%>
          <ul class="task-list">
            <% for(let task of tasks) { %>
            <li><%= task.title %></li>

            <!-- add comment to tasks -->
            <% if(rights != 'student') { %>
            <button class="comments-btn">Add a comment</button>
            <br />
            <br />
            <br />

            <% } %>

            <div class="comments-modal">
              <div class="modal-content">
                <span class="close">&times;</span>
                <h2>Leave a comment</h2>
                <form
                  action="/admin/comment/<%= studentId %>/<%= task.id %>"
                  method="post"
                >
                  <textarea
                    name="comment"
                    id=""
                    cols="50"
                    rows="10"
                    placeholder="Leave a comment for <%= studentName %>"
                    style="resize: none"
                  >
                  </textarea>
                  <div class="select-fields-div">
                    <button type="submit" style="float: left">Comment</button>
                  </div>
                </form>
              </div>
            </div>
            <% } %>
          </ul>
          <% } %>
        </section>
      </div>

      <% if(rights != 'student') { %>
      <section class="comments-made">
        <h2>Comments made</h2>
        <hr />
        <% if(comments.length <= 0) { %>
        <p style="color: grey">Comments made appear here</p>
        <% } else { %> <% for(let comment of comments) { %>
        <h4 style="margin: 10px 0 0 0"><%= comment.content.comment %></h4>
        <p style="text-decoration: underline; float: right; color: grey">
          <i>-- <%= comment.from %> --</i>
        </p>
        <% } %> <% } %>
      </section>
      <% } %>
    </main>

    <script src="/comments.js"></script>
  </body>
</html>
